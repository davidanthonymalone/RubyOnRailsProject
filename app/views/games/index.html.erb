<h1>Games that are on the site to be reviewed</h1>
<div class="table-responsive">
 <table class="table">
 <tbody>

    <tr>
      <th>Name - </th>
      <th>About - </th>
      <th>Price - </th>
      <th>Rating - </th>
      <th>Age group - </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %>    </td>
        <td><%= game.about %></td>
        <td><%= game.price %></td>
        <td><%= game.rating %></td>
        <td><%= game.age_group %></td>
    </br>
    
    
    
        <td><%= link_to 'Show |', game %></td>
        <td><%= link_to 'Edit |', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy ', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
